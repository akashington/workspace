{
	"packages":
	[
		"locales",
		"make",
		"g++"
	],
	
	"repositories":
	[
		{
			"URL": "https://github.com/akashington/workspace",
			"directory": "/home/development/workspace/workspace"
		},
		{
			"URL": "https://github.com/akashington/development-workspace",
			"directory": "/home/development/workspace/development-workspace"
		},
		{
			"URL": "https://github.com/akashington/velkro",
			"directory": "/home/development/workspace/velkro"
		}
	],

	"post-build-commands":
	[
		"sudo locale-gen en_US.UTF-8",
		"sudo update-locale LANG=en_US.UTF-8"
	],

	"startup-command": "env LANG=en_US.UTF-8 LANGUAGE=en_US:en LC_ALL=en_US.UTF-8 bash"
}